{
  "name": "mall-hell",
  "version": "4.5.0",
  "description": "A chaotic first-person browser game",
  "main": "index.html",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "bun run-tests.js",
    "test:unit": "bun run-tests.js --unit",
    "test:ui": "bun run-tests.js --ui",
    "test:quick": "bun run-tests.js --unit -q",
    "test:failed": "bun run-tests.js --failed",
    "test:list": "bun run-tests.js --list",
    "playtest": "bun playtest/playtest-runner.js",
    "playtest:all": "bun playtest/playtest-runner.js --all",
    "playtest:watch": "bun playtest/playtest-runner.js --show --verbose",
    "playtest:vision": "bun playtest/vision-agent.js",
    "playtest:vision:save": "bun playtest/vision-agent.js --save-screenshots",
    "serve": "bun x serve . -p 3000",
    "open": "open index.html"
  },
  "keywords": ["game", "threejs", "browser"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "puppeteer": "^24.36.0"
  }
}
